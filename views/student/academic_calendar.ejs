<link rel="stylesheet" href="/css/calendar.css"/>


<div class="window" id="window_layout">
    <%if(role==="student"){%>
        <div class="window_navbar">
          <%- include('../partials/student/navigation_bar.ejs',{notification}) %>
         </div>
    
    <%}else{%>
            <div class="window_navbar">
              <%- include('../partials/parent/navigation_bar.ejs') %>
            </div>
    
    <%}%>

    <div class="window_container">
      <div class="calender_container">
        
        <div class="container">
          <div class="header">
            <div id="month">
  
            </div>
            <div>
              <button id="btnBack"><i class="fa fa-angle-left"></i></button>
              <button id="btnNext"><i class="fa fa-angle-right"></i></button>
            </div>
          </div>
  
          <div class="weekdays">
            <div>Sun</div>
            <div>Mon</div>
            <div>Tue</div>
            <div>Wed</div>
            <div>Thu</div>
            <div>Fri</div>
            <div>Sat</div>
          </div>
  
          <div id="calendar">
            
          </div>
        </div>
        <div id="addEven">
          <div class="closebuttondv">
            <h1 class="btnClose"></h1>
          </div>
        </div>
        
      </div>
    </div>
</div>

   

<script src="/js/calendar.js"></script>
