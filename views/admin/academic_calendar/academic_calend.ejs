<link rel="stylesheet" href="/css/calendar.css"/>
<script src="/js/calendar.js"></script>

<div class="window" id="window_layout">
    <div class="window_navbar">
        <%- include('../../partials/admin/navigation_bar.ejs') %>
    </div>

    <div class="window_container">
      <div class="calender_container">
        
        <div class="container">
          <div class="header">
            <div id="month">
  
            </div>
            <div>
              <button id="btnBack"><i class="fa fa-angle-left"></i></button>
              <button id="btnNext"><i class="fa fa-angle-right"></i></button>
            </div>
          </div>
  
          <div class="weekdays">
            <div>Sun</div>
            <div>Mon</div>
            <div>Tue</div>
            <div>Wed</div>
            <div>Thu</div>
            <div>Fri</div>
            <div>Sat</div>
          </div>
  
          <div id="calendar">
            
          </div>
        </div>
        <div id="addEvent" class="addEvent">
          <div class="closebuttondiv">
            <h1 class="btnClose">X</h1>
          </div>
      
          <form id="event_form" action="" method="post">
            <div class="form_inputs">
              <div class="form_div select_input">
                <label class="select_label" for="status">Status</label>
                <select name="status" id="status">
                  <option value=""></option>
                  <option value="Holiday">Holiday</option>
                  <option value="Working Day">Working Day</option>
                </select>
              </div>
            </div>
            <br>
            <div class="form_inputs">
              <div class="form_div text_input">
                <input type="text" class="input" id="txtTitle" name="desc">
                <label for="father_name">Description</label>
              </div>
            </div>
            <br>
            <div class="form_submit">
              <input type="submit">
            </div>
          </form>
        </div>
        
      </div>
    </div>
</div>
  
