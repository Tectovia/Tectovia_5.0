<script>

    function hide_popup_add() {
        var element = document.getElementById("popup_add");
        element.style.display = "none";
    }
    
    function display_popup_add() {
        var element = document.getElementById("popup_add");
        element.style.display = "flex";
    }
    
</script>

<div class="window" id="window_layout">
    <div class="window_navbar">
        <%- include('../../partials/admin/navigation_bar.ejs') %>
    </div>

    <div class="window_container">
        <%- include('../../partials/admin/institution_subnavbar.ejs') %>
        <div class="container center_title">
            <%- page_title %>
            <div class="float_right">
                <button onclick="display_popup_add()" class="add_btn">Add</button>
            </div>
        </div>
        <div class="popup_container admin-Achievements-page" id="popup_add" style="display: none;">
            <div class="popup" id="popup">
                <div class="popup_header">
                    <p class="pop_title"><%= page_title %></p>
                    <span class="close_icon" id="closePopup" onclick="hide_popup_add()">&times;</span>
                </div>
                <div class="pop_body">
                    <form action="/admin/institution_info/achievements/submit_achievements" method="post" enctype="multipart/form-data" class="form">
                        <div class="form_inputs admin-Achievements-page-form-inputs">
                            <div class="form_div text_input">
                                <input type="text" class="input" id="achievement_title" name="title" required>
                                <label for="achievement_title">Achievement Title</label>
                            </div>
                            <div class="form_div text_input">
                                <input type="text" class="input" id="achievement_feild" name="field" required>
                                <label for="achievement_feild">Field of Achievement</label>
                            </div>
                            <div class="form_div text_input">
                                <input type="date" class="input" id="achievement_date" name="date" required>
                                <label for="achievement_date">Achievement Date</label>
                            </div>
                            <div class="form_div file_input">
                                <label for="achievement_photo">Photo</label>
                                <input type="file" class="input"  id="achievement_photo" name="img">
                            </div>
                            <div class="form_div textarea">
                                <label for="achievement_discription">Achievement Discription</label>
                                <textarea name="achievement_discription" id="desc"></textarea>
                            </div>
                            <div class="form_submit form_div_span">
                                <input type="submit">
                            </div>   
                        </div>
                    </form>
                </div>        
            </div>
        </div>
    </div>
</div>

<style>
    .admin-Achievements-page{
        margin-top: 6%;
        margin-left: 5%;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.5s ease-in-out forwards;
    }
    @keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
    } 

    .admin-Achievements-page-form-inputs{
        grid-template-columns: 1fr 1fr;
    }
</style>
