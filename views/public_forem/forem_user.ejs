    font-size: 1em;
    font-weight: normal;
    color: #666;
}

/* Style for Answers */
p {
    font-size: 1em;
    color: #444;
    margin-bottom: 5px;
}

/* Style for Verified Answers */
span {
    font-size: 1em;
    color: green;
}

