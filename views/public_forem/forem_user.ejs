<link rel="stylesheet" href="../../css/forum_your_page.css">
<div class="container">
   <div class="back_button">
<% if (role == 'staff') { %>
       
   <a href="/staff/forem/index/redirection/<%= user %>"><i class='bx bx-arrow-back back_arrow'></i></a>
  
<%  } else if(role == 'admin') { %> 
   
   <a href="/admin/forem/index"><i class='bx bx-arrow-back back_arrow'></i></a>
   
<% } else{%>

       <a href="/student/forem/index/redirect/<%= user %>/<%= role %>"><i class='bx bx-arrow-back back_arrow'></i></a>

       <% } %>

   </div>
   <div class="arts_main_heading"> <h2>Your Page</h2></div>
   <div class="visitor">
      <h4 class="hello"> Hello :<%= user ? user : "guest" %></h4>
      <h4><i class='bx bxs-id-card visitors' ></i>: <%= role ? role : 'Visitor' %></h4>
  </div>




  <% if(value && value.length > 0){ %>
   <% value.forEach(values => { %>
       <div class="question-container">
         <span class="question_delete">  <h5>Question</h5>
           <span class="delete_button_main">
            <% if (values.stream == 'arts') { %>
                <button class="delete-btn"><a href="/forem/deleteArts/<%= values._id %>"  onclick="return confirm('Are you sure you want to delete this question')">Delete</a></button><br>
            <% } %>
            <% if( values.stream == 'science'){ %>
                <button class="delete-btn"><a href="/forem/deleteScience/<%= values._id %>" onclick="return confirm('Are you sure you want to delete this question')">Delete</a></button>
            <% } %></span></span>
           <h6>Stream: <%= values.stream ? values.stream: " " %></h6>
           <%= values.question ? values.question: "no" %>
           <!-- <button>Edit</button> -->
         
       </div>
       <div class="answer-container" style="height: 200px; overflow-y: auto;"  >
           <h5>Answers</h5>
           <% values.answer.forEach((answerObj) => { %>
               <% Object.keys(answerObj).forEach((key) => { %>
                   <% if (key !== 'verified') { %>
                       <p><%= key %>: <%= answerObj[key] %> </p>  
                   <% } else if(answerObj[key]=== true){ %>
                       <span style='color:green'>Verified &#10004</span><br>
                       <!-- <p id="Count">//<%= key %> :<%= answerObj[key] %></p> -->
                   <% } %>     
               <% }) %>
           <% }) %>
       </div>
   <% }) %>
<% } %>

